# Server port (optional, default 3000)
PORT=3000

# Paddle client-side token (required for checkout).
# Create in Paddle dashboard -> Developer tools -> Authentication.
PADDLE_CLIENT_TOKEN=test_xxxx

# Paddle server-side API key (required for secure paid-order verification).
# Create in Paddle dashboard -> Developer tools -> Authentication.
PADDLE_API_KEY=test_xxxx

# Long random string for admin session cookies (recommended in production).
SESSION_SECRET=your-long-random-secret

# Only used when creating the first admin user. Set once, then change password
# in the dashboard and remove this from .env / Render env.
ADMIN_INITIAL_PASSWORD=
